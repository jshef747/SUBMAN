generator client {
  provider = "prisma-client-js"      // Fixed provider name
  output   = "../generated/prisma/client" // Matches your working import path
}

datasource db {
  provider = "postgresql"
}


model Subscription {
  id          Int      @id @default(autoincrement())
  service     String
  price       String
  payCycle    String
  renewalDate String
  status      String
  
  // Optional: Created at timestamp just for your records
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}