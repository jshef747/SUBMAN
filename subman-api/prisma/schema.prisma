generator client {
  provider = "prisma-client-js"      // Fixed provider name
  output   = "../generated/prisma/client" // Matches your working import path
}

datasource db {
  provider = "postgresql"
}


model Subscription {
  id          Int      @id @default(autoincrement())
  name        String   
  price       Float
  currency    String   @default("USD")
  frequency   String  
  startDate   DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}